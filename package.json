{
  "name": "select-jump",
  "displayName": "Select Jump",
  "description": "Adds a context menu for running custom searches and actions on selected text.",
  "version": "0.0.1",
  "publisher": "universato",
  "engines": { "vscode": "^1.75.0" },

  "activationEvents": [
    "onCommand:ext.showSearchMenu"
  ],

  "contributes": {
    "configuration": {
      "title": "Search selected text",
      "properties": {

        "contextSearchTools.searchRules": {
          "type": "array",
          "default": [
            {
              "label": "Google search",
              "pattern": "^(?!\\d+$).*",
              "url": "https://www.google.com/search?q=${query}"
            },
            {
              "label": "Google image search",
              "pattern": "^(?!\\d+$).*",
              "url": "https://www.google.com/search?q=${query}&udm=2"
            },
            {
              "label": "Wikipedia article",
              "pattern": "^(?!\\d+$).*",
              "url": "https://en.wikipedia.org/wiki/${query}"
            },
            {
              "label": "YouTube search",
              "pattern": "^(?!\\d+$).*",
              "url": "https://www.youtube.com/results?search_query=${query}"
            }
          ],
          "description": "選択テキストに対して正規表現パターンで表示/非表示を制御する検索メニュー一覧(${query} が選択文字列に置換されます)",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "pattern": { "type": "string" },
              "url": { "type": "string" }
            }
          }
        }
      }
    },

    "commands": [
      {
        "command": "ext.showSearchMenu",
        "title": "Search selected text..."
      }
    ],

    "menus": {
      "editor/context": [
        {
          "command": "ext.showSearchMenu",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },

  "main": "./extension.js"
}
