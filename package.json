{
  "name": "context-search-tools",
  "displayName": "Context Search Tools",
  "description": "選択したテキストから検索等を行う右クリックメニュー拡張",
  "version": "0.0.1",
  "publisher": "universato",
  "engines": { "vscode": "^1.75.0" },

  "contributes": {
    "configuration": {
      "title": "Search selected text...",
      "properties": {
        "contextSearchTools.customSearches": {
          "type": "array",
          "default": [
            {
              "label": "Google検索",
              "url": "https://www.google.com/search?q=${query}"
            },
            {
              "label": "Google画像検索",
              "url": "https://www.google.com/search?q=${query}&udm=2"
            },
            {
              "label": "Wikipedia(日本語)検索",
              "url": "https://ja.wikipedia.org/wiki/${query}"
            }
          ],
          "description": "常に QuickPick に表示される検索メニュー(${query} が選択文字列に置換されます)",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string" }
            }
          }
        },
        "contextSearchTools.patternSearches": {
          "type": "array",
          "default": [
            {
              "label": "時事通信社 記事検索(数字のみ)",
              "pattern": "^\\d+$",
              "url": "https://www.jiji.com/jc/article?k=${query}"
            }
          ],
          "description": "選択テキストが正規表現に一致したときだけ表示される検索メニュー",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "pattern": { "type": "string" },
              "url": { "type": "string" }
            }
          }
        }
      }
    },

    "commands": [
      {
        "command": "ext.showSearchMenu",
        "title": "Search++"
      }
    ],

    "menus": {
      "editor/context": [
        {
          "command": "ext.showSearchMenu",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },

  "main": "./extension.js"
}
